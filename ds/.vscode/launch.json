{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Active Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/${relativeFileDirname}/${fileBasenameNoExtension}", 
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-run",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": { "engineLogging": true },
            "targetArchitecture": "x64"
        }
    ]
}
