{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-run",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-I", "${workspaceFolder}/include",
                "${file}",
                "${workspaceFolder}/src/${fileBasenameNoExtension}.c",
                "-o", "${fileDirname}/${fileBasenameNoExtension}",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build only the files relevant to the current main file."
        }
    ]
}