{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build test file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/test/${fileBasenameNoExtension}_test.c",
                "${workspaceFolder}/src/${fileBasenameNoExtension}.c",
                "-o",
                "${workspaceFolder}/test/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by Debugger."
        }
    ]
}